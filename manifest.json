{
  "manifest_version": 3,
  "name": "Big Pot Indexer",
  "version": "0.1",
  "description": "Logs timestamps of big pots in poker VODs and outputs a YouTube comment.",
  "permissions": ["tabs", "activeTab", "scripting", "storage", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["src/content.js"],
      "css": ["src/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "vendor/*",
        "test.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
